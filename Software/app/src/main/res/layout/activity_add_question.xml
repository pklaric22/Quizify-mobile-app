<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="#4B0082">

        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/naslov"
            android:textColor="#FFFFFF"
            android:textSize="80sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_question"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/type_text"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_correct_answer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/correct_answer"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_wrong_answer1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/incorrect_answer1"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_wrong_answer2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/incorrect_answer2"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/et_wrong_answer3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/incorrect_answer3"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:importantForAutofill="no"/>

        <Spinner
            android:id="@+id/spinner_difficulty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_spinner"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_spinner"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_save_question"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:text="@string/save_question"
            android:textAllCaps="true"
            android:textColor="#4B0082"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
